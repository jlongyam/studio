{
  "name": "@jlongyam/studio",
  "version": "1.0.0",
  "exports": "./src/ts/main.ts",
  "tasks": {
    "check": "deno fmt ./src/ts/main.ts --check",
    "lint": "deno lint ./src/ts/main.ts --fix",
    "dev": "deno run ./src/ts/main.ts",
    "test": "deno test ./src/ts/main.ts -A",
    "bundle": "deno bundle ./src/ts/main.ts --outdir ./src/js/",
    "info": "deno info ./src/js/main.js"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "always",
    "include": ["./src/ts/"],
    "exclude": ["*.json","./src/ts/data/**/*.ts"]
  },
  "lint": {
    "include": ["./src/ts/"],
    "exclude": ["./src/ts/data/**/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "exclude": [
    "./src/js/"
  ]
}
